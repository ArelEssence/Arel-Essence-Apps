<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/red_rectangle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/logo_arel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue as
            Service Provider"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_white_large"
                android:text="Login"
                android:textColor="#ff0000"
                android:textStyle="bold" />

            <Button
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_red_large"
                android:text="Register"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:background="@drawable/btn_white_large"
            android:drawableLeft="@drawable/google_logo"
            android:text="Continue With Google"
            android:textColor="#ff0000"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:background="@drawable/btn_blue_large"
            android:drawableLeft="@drawable/fb_logo"
            android:text="Continue With facebook"
            android:textColor="#155BCF"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter as a guest"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#808080"/>

    </LinearLayout>

</LinearLayout>