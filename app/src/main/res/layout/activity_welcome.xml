<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/red_rectangle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/logo_arel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="at Arel Essence Mobile Apps"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter as a"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#808080"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/btn_red_large"
            android:text="User"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Provider"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:textColor="#ff0000"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/btn_white_large"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter as a guest"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#808080"/>

    </LinearLayout>

</LinearLayout>